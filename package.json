{
  "name": "express-zod-api",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "author": {
    "name": "Carl",
    "url": "https://robintail.cz",
    "email": "me@robintail.cz"
  },
  "scripts": {
    "start": "npm run build &&  cross-env NODE_ENV=production node -r tsconfig-paths/register ./dist/server.js",
    "dev": "cross-env NODE_ENV=development ts-node-dev -r ./tsconfig-paths-bootstrap.js src/server.ts ",
    "client": "cd client && npm run dev",
    "build": "esbuild src/**/*.ts  --bundle --packages=external --platform=node --format=cjs --outdir=dist ",
    "prepare": "husky install",
    "lint": "eslint src --ext ts,tsx --fix --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json}\"",
    "db:seed": "ts-node scripts/seed.ts",
    "db:studio": "prisma studio",
    "db:push": "prisma db push && prisma generate",
    "postinstall": "prisma generate",
    "db:reset": "npx prisma migrate reset && npm run db:push  && npm run db:seed"
  },
  "dependencies": {
    "@prisma/client": "^6.7.0",
    "bcrypt": "^5.1.1",
    "body-parser": "^2.2.0",
    "chalk": "^4.1.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-zod-api": "^20.22.4",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0",
    "zod": "^3.24.4",
    "zod-sockets": "^2.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.26.0",
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/module-alias": "^2.0.4",
    "@types/node": "^22.15.17",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "esbuild": "^0.25.4",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.4.0",
    "husky": "^8.0.3",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prisma": "^6.7.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.0",
    "zod-prisma": "^0.5.4"
  }
}